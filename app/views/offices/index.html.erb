<% title "Những khoảnh khắc khó quên nơi Công sở" %>
<div class="home-page">
	<% @offices.each do |office| %>
		<div class="page-secction funny-section" id="<%= office.id %>">
			<h3 class="title">
				<%#= link_to 'Edit', edit_office_path(office) %>
				<%#= link_to 'Destroy', office, method: :delete, data: { confirm: 'Are you sure?' } %>
				<%= link_to(office) do %>
					<%= office.title.capitalize %>
				<% end %>
			</h3>
			<h4 class="owner">Đăng bởi <%= office.owner.capitalize %></h4>
			<h5 class="create-time"><%= time_ago_in_words(office.created_at).capitalize %> trước</h5>
			<div class="image-box">
				<img src="<%= office.image %>" alt="<%= office.slug %>" class="image-funny" name"">
				<div class="image-shadow">
					<div>
						<span class="like-count"><%= office.like %></span>
						<div class="like-icon" name="<%= office.id %>" onclick="likeImage ( 'icon' , this, <%= office.id %>)" ></div>
					</div>
				</div>
			</div>
			<div class="clear-fix"></div>
			<div class="image-button">
				<%= image_tag("like-button-ver-2.png", :onClick => "likeImage ('button', this, #{office.id})".html_safe , :name => "#{office.id}" ) %>
				<a href="<%= "http://www.facebook.com/sharer.php?u=" + @productDomain + "/offices/" + office.slug %>" title="Comment" target="blank">Chia sẻ</a>
				<%= link_to 'Bình luận',  office, :target => "_blank"%>
			</div>
			<div class="clear-fix"></div>
		</div>
	<% end %>
	<div class="paging-secction">
		<%= will_paginate @offices, renderer: BootstrapPagination::Rails %>
	</div>
</div>
