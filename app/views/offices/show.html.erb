<% title @office.title.capitalize %>
<div class="image-content">
	<div class="page-secction funny-section" id="<%= @office.id %>">
		<h3 class="title">
			<%#= link_to 'Edit', edit_office_path(office) %>
			<%#= link_to 'Destroy', office, method: :delete, data: { confirm: 'Are you sure?' } %>
			<%= @office.title.capitalize %>
		</h3>
		<h5 class="create-time"><%= time_ago_in_words(@office.created_at).capitalize %> trước</h5>
		<div class="image-box">
			<img src="<%= @office.image %>" alt="<%= @office.slug %>" class="image-funny" name"">
			<div class="image-shadow">
				<div>
				<span class="like-count"><%= @office.like %></span>
				<div class="like-icon" name="<%= @office.id %>" onclick="likeImage (this, <%= @office.id %>)"></div>
				</div>
			</div>
		</div>
	</div>
	<div class="page-secction">
		<a class="facebook-share-button" target="top" href="<%= "http://www.facebook.com/sharer.php?u=" + @currentUrl %>">
		Chia sẻ trên Facebook 
			
		</a>
	</div>
	<div class="page-secction">
		<div class="fb-comments" data-href="<%= "https://" + @currentUrl %>" data-numposts="10"></div>
	</div>
</div>
